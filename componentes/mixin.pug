mixin contactoP(icono,alterno,contenido)
    article.contacto__small
        picture: img(src="./img/"+icono alt=alterno)
        p=contenido

mixin contactoG(icono,alterno,titulo,contenido)
    article.contacto__grande
        picture: img(src="./img/"+icono alt=alterno)
        div  
            p=titulo
            p=contenido

mixin noticia(imagen,alterno,titulo,fecha,enlace,clase)
    a(href=""+enlace) 
        article.noticia__item(class=clase href="google.com")
            picture.noticia__img
                img(src="/img/avisos/"+imagen, alt=alterno)
            .noticia__contenido
                .titulo
                    h2=titulo
                    p.fecha=fecha
    
mixin noticiaEn(imagen,alterno,titulo,fecha,enlace,clase)
    a(href=""+enlace target="_blank") 
        article.noticia__item(class=clase href="google.com")
            picture.noticia__img
                img(src="../img/avisos/"+imagen, alt=alterno)
            .noticia__contenido
                .titulo
                    h2=titulo
                    p.fecha=fecha

