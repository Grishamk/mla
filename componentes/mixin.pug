//HOME
mixin respaldo(imagen,alterno,titulo,contenido)
    div.main-container__item.fade-in
        img(src="./img/"+imagen alt=alterno)
        h2=titulo
        p=contenido

mixin socio(imagen,alterno,nombre,cargo)
    article.capital-humano__item.fade-in
        img(src="./img/"+imagen alt=alterno)
        h2=nombre
        p=cargo

mixin contactoP(icono,alterno,contenido)
    article.contacto__small
        picture: img(src="./img/"+icono alt=alterno)
        p=contenido

mixin contactoG(icono,alterno,titulo,contenido)
    article.contacto__grande
        picture: img(src="./img/"+icono alt=alterno)
        div  
            p=titulo
            p=contenido

mixin noticia(imagen,alterno,titulo,texto,enlace,clase)
    article.noticia__item(class=clase)
        picture
            img(src="./img/"+imagen, alt=alterno)
        .noticia__contenido
            h2=titulo
            p=texto
        .noticia__enlace
            a(href=enlace) Leer más
                span
                    img(src="./icon/4829869_arrow_next_right_icon.svg", alt="Flecha que apunta a la derecha") 






mixin valores(imagen,alterno,titulo,texto,clase)
    article.nosotrosValores__item
        picture: img(src="../../icon/"+imagen alt=alterno class=clase)
        h2=titulo
        p=texto

mixin membresia(imagen,alterno,texto)
    article.membresia__item
        picture: img(src="../../img/miembros/"+imagen alt=alterno)
        h2=texto

mixin registro(texto)
    article.registro__item
        h2=texto

mixin actoresIn(icono,alterno,texto,diferenciador)
    article(class=diferenciador)
        img(src='../../icon/'+icono alt=alterno)
        p=texto

mixin staffElement(imagen,alterno,titulo,text1,text2,text3,clase)
    article.staff__item
        picture
            img(src="../../img/"+imagen alt=alterno)
        div.staff__text-container
            h2=titulo
            p=text1
            p=text2
            p(class=clase)=text3

mixin aviso(imagen,alterno,titulo,texto,link)
    article
        picture
            img(src="../../img/"+imagen alt=alterno)
        div
            h2=titulo
            p=texto 
            a(href=link) Leer más
                span
                    img(src="../../icon/4829869_arrow_next_right_icon.svg", alt="Flecha que apunta a la derecha")
